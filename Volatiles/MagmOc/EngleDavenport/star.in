# Host star parameters
sName		star                  # Body name
saModules    	stellar flare eqtide            # Active modules

# Physical properties
dMass        	0.189                  # Mass in Msun
dRotPeriod      -1.0                  # Rotation period, negative -> days
dAge            1.0e6                 # Initial age [yr]

# STELLAR parameters
sStellarModel	  baraffe             # Stellar evolution model
sXUVModel           Engle24MidLate
bHaltEndBaraffeGrid 0                 # Don't end sim when we reach end of grid

#Flare parameters
dFlareMinEnergy            -1.0e31               # Min flare energy
dFlareMaxEnergy           -1.0e33                # Max flare energy
sFlareFFD                           davenport    # flare frequency distribution evolution model
dEnergyBin                       1000            # Number of bins between min and max energy
sFlareBandPass                  sxr

dCMEOpeningAngle 120
dCMEProtonEnergy -30
dCMEXRayXUVScaling 50
dCMEMomentumScaling 1000
dCarringtonFluence  -1e14
dCarringtonLX       -1.26e21


# eqtide
dTidalQ         1e6		   # Tidal phase lag
dK2             1	           # Love number of degree 2
dMaxLockDiff    0.01
saTidePerts     b          # Body name(s) of tidal perturbers

saOutputOrder 	Time -Luminosity -LXUVStellar -LXUVFlare -LXUVTot 
