dRotPeriod      -1.0                  # Rotation period, negative -> days
dAge            5.0e6                 # Initial age [yr]

# STELLAR parameters
sStellarModel	  baraffe             # Stellar evolution model
bHaltEndBaraffeGrid 0                 # Don't end sim when we reach end of grid
sMagBrakingModel  matt                # Magnetic braking model
dSatXUVFrac       0.00112              # XUV Saturation fraction
dSatXUVTime       -2.002                # XUV Saturation timescale, negative-> in Gyr
dXUVBeta          1.197                # XUV decay power law exponent

# FLARE Parameters
dFlareMinEnergy            -1.0e29              # Min flare energy
dFlareMaxEnergy            -1.0e34              # Max flare energy
sFlareFFD                           single      # flare frequency distribution evolution model
dEnergyBin                       1000           # Number of bins between min and max energy
sFlareBandPass                  sxr
dFlareSingleStarA1         -0.3008257433775617
dFlareSingleStarA2          -0.5334471077641867
dFlareSingleStarB1           8.731613540323513
dFlareSingleStarB2          16.78046229493345



saOutputOrder 	Time -Luminosity -LXUVStellar -LXUVFlare -LXUVTot 
